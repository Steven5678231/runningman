<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout

    android:id="@+id/dl_layout"
    android:background="#EEEEEE"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/back_shape">
        <include layout="@layout/layout_titlebar"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingBottom="10dp"
            android:background="#2B475B"
            android:layout_weight="1.5">

            <LinearLayout
                android:id="@+id/top_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/back_shape"
                android:gravity="center|bottom"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/profilePic"
                    android:paddingTop="10dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="fitXY"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/profile_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/back_shape"
                    android:orientation="horizontal"
                    android:paddingHorizontal="10dp">

                    <TextView
                        android:id="@+id/duration_user"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/run_day"
                        android:gravity="center"
                        android:text="" />

                    <TextView
                        android:id="@+id/distance_user"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/run_km"
                        android:gravity="center"
                        android:text="" />

                    <TextView
                        android:id="@+id/coins_user"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/coin"
                        android:gravity="center"
                        android:text="" />


                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="#ECF0F1"
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_height="0dp">

            <LinearLayout

                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:background="@drawable/back_shape"
                android:gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_description"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Good Good Run, Day Day Up!"
                    android:textSize="20sp" />




            </LinearLayout>

            <LinearLayout

                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:padding="8sp"
                android:layout_width="match_parent"
                android:background="@drawable/back_shape"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="wrap_content">



                <TextView
                    android:id="@+id/profile_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center|left"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/tel"
                    android:text="+91 79999999"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/profile_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="8dp"
                    android:gravity="center|left"
                    android:drawablePadding="10dp"
                    android:layout_marginBottom="8dp"
                    android:drawableLeft="@drawable/email"
                    android:text="email@fd.com"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/profile_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="8dp"
                    android:gravity="center|left"
                    android:drawablePadding="10dp"
                    android:layout_marginBottom="8dp"
                    android:drawableLeft="@drawable/address"
                    android:text=""
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/profile_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="8dp"
                    android:gravity="center|left"
                    android:drawableLeft="@drawable/weight"
                    android:drawablePadding="10dp"
                    android:text="60 kg"
                    android:textSize="20sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="8dp">

                <Button
                    android:id="@+id/btn_editing"
                    android:layout_width="200dp"
                    android:layout_margin="16dp"
                    android:textColor="#ffffff"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:textAllCaps="false"
                    android:background="@drawable/button_shape"
                    android:layout_weight="1">
                </Button>
                <Button
                    android:id="@+id/btn_recording"
                    android:layout_margin="16dp"
                    android:layout_width="200dp"
                    android:background="@drawable/button_shape"
                    android:textColor="#ffffff"
                    android:layout_height="wrap_content"
                    android:text="Running Recording"
                    android:textAllCaps="false"
                    android:layout_weight="1">
                </Button>
            </LinearLayout>





        </LinearLayout>




    </LinearLayout>

    <include layout="@layout/nag_linearlayout"/>






</androidx.drawerlayout.widget.DrawerLayout>



