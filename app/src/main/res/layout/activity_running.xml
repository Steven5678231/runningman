<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RunningActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="389dp"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/duration"
                    android:text="DURATION"
                    android:textAlignment="center"
                    android:gravity="center_horizontal" />
                <TextView
                    android:id="@+id/bigDuration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00:00:00"
                    android:gravity="center_horizontal"
                    android:textSize="30sp"/>

            </LinearLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"
                >

                <LinearLayout
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:id="@+id/imageView1"
                        android:src="@drawable/logout"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="2"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="bottom"
                                android:layout_weight="1"
                                android:text="Distance:"/>
                            <TextView
                                android:id="@+id/distanceTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="0 m/s"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:gravity="center_vertical"

                    >
                    <ImageView
                        android:id="@+id/imageView2"
                        android:src="@drawable/logout"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="2"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="bottom"
                            android:layout_weight="1"
                            android:text="Speed:"/>
                        <TextView
                            android:id="@+id/speedTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0 m/s"/>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/imageView3"
                        android:src="@drawable/logout"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>

<!--                        android:src="@drawable/ic_launcher_foreground" />-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="2">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="bottom"
                            android:text="Total Time:"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/timerTextView"
                            android:layout_weight="1"
                            android:text="00 : 00" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/imageView4"
                        android:src="@drawable/logout"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="2">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="bottom"
                            android:text="Estimate Calories:"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/calTextView"
                            android:text="0 Kj"/>
                    </LinearLayout>


                </LinearLayout>
            </GridLayout>


        </LinearLayout>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        >
        <View android:id="@+id/fakeView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/fakeView"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/start_run"
            android:id="@+id/startRun"
            />
        <Button
            android:layout_width= "wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/startRun"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/stop_run"
            android:id="@+id/stopRun"/>





    </RelativeLayout>



</RelativeLayout>